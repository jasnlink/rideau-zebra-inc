{% assign collection = collections['all'] %}
<div class="pt-8 px-4 sm:px-8">
    <div class="py-8 bg-neutral-200 rounded-md">
        <div class="lg:w-3/4 mx-auto">
            <h1 class="font-serif font-bold text-3xl">{{ collection.title }}</h1>
            <div class="mt-4">{{ collection.description | replace: '<p', '<p class="mb-4"' }}</div>
        </div>
    </div>
</div>
<div class="pt-4 pb-12 lg:pt-4 lg:pb-24 px-4 sm:px-8">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-x-4 gap-y-8">
        {% for product in collection.products %}
            {% render 'product-card', product: product %}
        {% endfor %}
    </div>
</div>
