<div id="cart-drawer-overlay" class="hidden transition-opacity ease-in-out duration-700 fixed top-0 left-0 right-0 bottom-0 bg-black z-40"></div>
<div id="cart-drawer" class="hidden transition-transform ease-in-out duration-700 fixed top-0 right-0 z-50 bg-white h-full w-full shadow-lg">
    <div class="flex flex-col h-full">
        <div id="cart-drawer-header" class="shrink bg-white">
            <div class="px-2 sm:px-8 flex justify-between items-center py-4 mx-auto">
                <span class="text-4xl sm:text-5xl text-stone-900 font-serif">{{ 'templates.cart.your_cart' | t }}</span>
                <div role="button" id="cart-close-btn" class="flex items-center justify-center relative p-2 rounded-full bg-stone-900 hover:bg-indigo-600 transition-all">
                    <div>{% render 'icon-close', class: 'h-5 w-auto fill-neutral-100 text-neutral-100' %}</div>
                </div>
            </div>
        </div>
        <div data-cart-drawer-state="default" id="cart-drawer-content" class="h-full shrink overflow-auto flex flex-col"></div>
        <div data-cart-drawer-state="loading" class="hidden h-full items-center justify-center">
            <span>{% render 'icon-loading', class: 'animate-spin mx-auto h-12 w-12 text-black' %}</span>
        </div>
    </div>
</div>