<div id="mobile-menu-overlay" class="hidden transition-opacity ease-in-out duration-700 fixed top-0 left-0 right-0 bottom-0 bg-black z-40"></div>
<div id="mobile-menu" class="hidden transition-transform ease-in-out duration-700 fixed top-0 right-0 z-50 bg-white h-full w-full shadow-lg">
    <div class="flex flex-col h-full">
        <div class="shrink bg-white">
            <div class="px-2 sm:px-8 py-4 mx-auto">
                <div role="button" id="mobile-menu-close-btn" class="w-fit flex items-center justify-center relative p-2 rounded-full bg-stone-900 hover:bg-indigo-600 transition-all">
                    <div>{% render 'icon-close', class: 'h-5 w-auto fill-neutral-100 text-neutral-100' %}</div>
                </div>
            </div>
        </div>
        <div>
            <div class="flex flex-col font-light uppercase gap-6 items-center text-stone-900">
                <a class="transition-all hover:underline hover:underline-offset-4 text-2xl" href="{{ routes['collections_url'] }}" title="{{ 'sections.header.catalog' | t }}">{{ 'sections.header.catalog' | t }}</a>
                <a class="transition-all hover:underline hover:underline-offset-4 text-2xl" href="{{ blogs['news'].url }}" title="{{ 'blogs.article.blog' | t }}">{{ 'blogs.article.blog' | t }}</a>
                <a class="transition-all hover:underline hover:underline-offset-4 text-2xl" href="{{ pages['contact'].url }}" title="{{ 'sections.header.contact' | t }}">{{ 'sections.header.contact' | t }}</a>
                {% comment %} <a class="h-fit font-medium bg-stone-900 text-neutral-100 uppercase px-8 pt-3 pb-3 rounded-md transition-all hover:bg-indigo-500" href="{{ shop.url }}" title="{{ 'sections.header.custom_order' | t }}">{{ 'sections.header.custom_order' | t }}</a> {% endcomment %}
                {% assign translate_lang = 'sections.header.translate' | t %}
                {% assign translate_lang_url = translate_lang | prepend: '/' %}
                {% assign current_lang_url = request.locale.iso_code | prepend: '/' %}
                {% assign parsed_request_path = request.path | remove: current_lang_url %}
                {% unless translate_lang == 'en' %}
                    {% assign parsed_request_path = parsed_request_path | prepend: translate_lang_url %}
                {% endunless %}
                <a class="transition-all hover:underline hover:underline-offset-4 text-2xl" href="{{ shop.url | remove: current_lang_url }}{{ parsed_request_path }}" title="{{ translate_lang }}">{{ translate_lang }}</a>
            </div>
        </div>
    </div>
</div>