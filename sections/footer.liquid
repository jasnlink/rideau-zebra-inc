<div class="bg-indigo-700">
    <div class="mx-auto py-6 lg:py-6">
        <div class="flex flex-col gap-y-2 sm:gap-y-6 lg:flex-row items-center justify-center gap-x-4">
            <span class="text-sm font-medium uppercase text-neutral-100">{{ 'sections.footer.shop_with_confidence' | t }}</span>
            <div class="inline-flex justify-center gap-y-2 gap-x-2 flex-wrap">
                {% for type in shop.enabled_payment_types -%}
                    {{ type | payment_type_svg_tag: class: 'h-8 w-auto' }}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<footer class="bg-stone-900 text-neutral-200/[.85] pt-24 pb-24 underline-offset-4">
    <div>
        <div class="px-4 sm:px-8 pt-16 pb-20">
            <div class="grid grid-cols-1 xl:grid-cols-2 gap-y-24 sm:gap-y-16 gap-x-48 sm:gap-x-16 xl:gap-x-12">
                <div class="w-10/12">
                    <div>
                        <a href="{{ routes['root_url'] }}" title="{{ shop.name }}">{% render 'logo-inverse', class: 'h-16' %}</a>
                    </div>
                    <div class="mt-8">
                        <span>{{ 'sections.footer.mission.paragraph_1' | t }}</span>
                    </div>
                    <div class="mt-4">
                        <span>{{ 'sections.footer.mission.paragraph_2' | t }}</span>
                    </div>
                    <div class="mt-24">
                        <div>
                            <div>
                                <a class="text-3xl font-bold font-serif text-neutral-100">{{ 'sections.footer.email_subscription.title' | t }}</a>
                            </div>
                            <div class="mt-4">
                                {% form 'customer' %}
                                    <p class="text-base">{{ 'sections.footer.email_subscription.description' | t }}</p>
                                    <div class="flex flex-col lg:flex-row gap-4 mt-6">
                                        <input type="email" name="contact[email]" placeholder="{{ 'sections.footer.email_subscription.enter_your_email' | t }}" class="py-3 px-2 rounded-md bg-neutral-100 text-stone-900 xl:flex-grow" />
                                        <input type="submit" class="h-fit cursor-pointer font-medium bg-neutral-100 text-stone-900 uppercase px-8 pt-3 pb-3 rounded-md transition-all hover:bg-indigo-700 hover:text-neutral-100" value="{{ 'sections.footer.email_subscription.subscribe' | t }}" />
                                    </div>
                                {% endform %}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="grid grid-cols-2 text-lg">
                        <div>
                            <div>
                                <span class="text-2xl font-bold font-serif text-neutral-100 select-none">{{ 'sections.footer.links_1.title' | t }}</span>
                            </div>
                            <div class="mt-8">
                                <a href="{{ pages['about-us'].url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_1.about_us' | t }}">{{ 'sections.footer.links_1.about_us' | t }}</a>
                            </div>
                            <div class="mt-4">
                                <a href="{{ pages['contact'].url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_1.contact_us' | t }}">{{ 'sections.footer.links_1.contact_us' | t }}</a>
                            </div>
                            <div class="mt-4">
                                <a href="{{ blogs['news'].url }}" class="no-underline hover:underline" title="{{ 'blogs.article.blog' | t }}">{{ 'blogs.article.blog' | t }}</a>
                            </div>
                        </div>
                        <div>
                            <div>
                                <span class="text-2xl font-bold font-serif text-neutral-100 select-none">{{ 'sections.footer.links_2.title' | t }}</span>
                            </div>
                            <div class="mt-8">
                                <a href="{{ shop.shipping_policy.url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_2.shipping_delivery' | t }}">{{ 'sections.footer.links_2.shipping_delivery' | t }}</a>
                            </div>
                            <div class="mt-4">
                                <a href="{{ shop.refund_policy.url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_2.returns_exchanges' | t }}">{{ 'sections.footer.links_2.returns_exchanges' | t }}</a>
                            </div>
                            <div class="mt-4">
                                <a href="{{ shop.privacy_policy.url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_2.privacy_policy' | t }}">{{ 'sections.footer.links_2.privacy_policy' | t }}</a>
                            </div>
                            <div class="mt-4">
                                <a href="{{ shop.terms_of_service.url }}" class="no-underline hover:underline" title="{{ 'sections.footer.links_2.terms_of_service' | t }}">{{ 'sections.footer.links_2.terms_of_service' | t }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="px-4 sm:px-8 mx-auto py-4 sm:py-2">
            <div class="flex flex-col gap-y-12 lg:gap-y-4 lg:flex-row justify-between lg:items-center">
                <div class="order-last lg:order-first text-xs uppercase w-full lg:w-auto">
                    <div>
                        <span class="normal-case">{{ 'sections.footer.solution_by_html' | t }}</span>
                    </div>
                    <div>
                        <span class="font-bold">{{ 'sections.footer.powered_by_html' | t }}</span>
                        <span> - </span>
                        <span class="block sm:inline">{{ 'sections.footer.copyright' | t }} {{ 'now' | date: "%Y" }} <span class="font-bold">{{ 'RIDEAU ZEBRA INC.' | link_to: routes.root_url }}</span></span>
                    </div>
                </div>
                <div data-secure-action="footer" role="button" class="w-full order-first lg:order-last sm:w-fit text-xs text-stone-900 font-bold rounded-md flex justify-center items-center gap-x-2 bg-green-300 py-2 px-8 tracking-tighter select-none hover:bg-green-200 active:bg-green-400">{% render 'icon-secure', class: 'h-4 w-auto fill-black' %} <span>{{ 'sections.footer.ssl_encrypted' | t }}</span></div>
            </div>
        </div>
    </div>
</footer>
<div id="secure-popover" class="hidden bg-white rounded-md relative z-10" role="tooltip">
    <div data-secure-close role="button" class="absolute z-10 top-2 right-2">
        {% render 'icon-close', class: 'h-4 w-auto fill-black' %}
    </div>
    <div class="relative container mx-auto py-8 px-6">
        <div class="text-center bg-green-100 rounded-md px-8 py-8 border border-green-300 text-green-800">
            <div class="flex items-center justify-center gap-x-2">{% render 'icon-success', class: 'h-8 w-auto fill-green-400', fill: '#428445' %} <span class="font-bold text-2xl">{{ 'sections.footer.site_secure' | t }}</span></div>
            <div class="mt-6 text-center">
                <a href="https://www.ssllabs.com/ssltest/analyze.html?d=rideauzebra.ca&latest" target="_blank" class="block text-neutral-100 bg-green-500 px-8 w-full rounded-md text-sm py-2 select-none hover:bg-green-400 active:bg-green-600 uppercase" title="{{ 'sections.footer.verify_security' | t }}">{{ 'sections.footer.verify_security' | t }}</a>
            </div>
        </div>
    </div>
</div>